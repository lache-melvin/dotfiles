# npm script shortcuts
alias t="npm test"
alias nr="npm run"
alias nrd="npm run dev"
alias nrl="npm run lint"
alias db="npx knex migrate:latest && npx knex seed:run"
alias dbr="npm run knex migrate:latest && npm run knex seed:run"

# git outta my way
alias gll="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'"
alias glla="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"

# speedy terminalisation
alias lt="tree -a -C -I 'node_modules|.git|target' --dirsfirst"
alias cl="clear && l"
alias rr="rm -rf"
alias d="cs ~/dev"
alias e="cs ~/dev/eda"
alias dotfiles="cs $DOTFILES"
alias essh="eval 'ssh-agent' && ssh-add"
alias f="open-foundations"

# docker
alias dc="docker-compose"

# open NeoVim
alias v="nvim"
alias vim="nvim"

# open config files
alias aliases="v $DOTFILES/aliases"
alias zprofile="v $DOTFILES/zsh/.zprofile"
alias zshenv="v $DOTFILES/zsh/.zshenv"
alias zshrc="v $DOTFILES/zsh/.zshrc"
alias vimrc="v $DOTFILES/config/init.vim"
alias starshipconf="v $DOTFILES/config/starship.toml"
